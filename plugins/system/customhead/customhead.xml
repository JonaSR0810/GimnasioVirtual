<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>System - Chat Compose</name>
	<author>ChatCompose.com</author>
	<creationDate>18 Nov 2018</creationDate>
	<copyright>Copyright (C) 2018 IntelDig. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>chatcompose@inteldig.com</authorEmail>
	<authorUrl>https://www.chatcompose.com/</authorUrl>
	<version>1.0</version>
	<description>PLG_SYSTEM_CUSTOMHEAD_XML_DESCRIPTION</description>
	<files>
		<filename plugin="customhead">customhead.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_customhead.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_customhead.sys.ini</language>
		<language tag="es-ES">es-ES/es-ES.plg_system_customhead.ini</language>
		<language tag="es-ES">es-ES/es-ES.plg_system_customhead.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="customhead"
					type="text"
					filter="raw"
					default=""
					label="PLG_SYSTEM_CUSTOMHEAD_FIELD_LABEL"
					description="PLG_SYSTEM_CUSTOMHEAD_FIELD_DESC"
					class="input"/>
			</fieldset>
			<fieldset name="advanced">
				<field
					name="customlang"
					type="text"
					filter="raw"
					default=""
					label="PLG_SYSTEM_CUSTOMHEAD_FIELD_LABEL2"
					description="PLG_SYSTEM_CUSTOMHEAD_FIELD_DESC2"
					class="input"/>
			</fieldset>
		</fields>
	</config>
</extension>
